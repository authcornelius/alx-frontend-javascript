{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./js",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "commonjs",
    "target": "es5",

    /* Other Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Stricter Typechecking Options */
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Recommended Options */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["js/**/*"]
}
